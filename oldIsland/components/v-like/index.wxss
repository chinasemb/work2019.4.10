/* components/v-like/index.wxss */
.container{
  display: inline-flex;
  background-color: antiquewhite;
  border-radius: 8px;
  border: 1px solid #BBB;
}
.container .image-wrapper{
  display: inline-flex;
  height: 100%;
  background-color: #BBB;
  flex-direction: row;
  justify-content: center; 
  align-items: center;
  padding: 5rpx  70rpx;
}
.container .image-wrapper text{
  text-align: center;
  line-height: 32rpx;
  position: relative;
  top: -10rpx;
  left: 10rpx;
}
.container image{
  width: 32rpx;
  height: 32rpx;
}
.container .text2{
  font-size: 32rpx;
  line-height: 32rpx;
  color: rgb(238, 15, 26);
}