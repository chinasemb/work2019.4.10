/* components/v-like/index.wxss */
.container{
  display: inline-flex;
  background-color: rgb(245, 243, 242);
  border-radius: 4px;
  border: 1px solid #BBB;
}
.container .image-wrapper{
  display: inline-flex;
  height: 100%;
  background-color: #BBB;
  flex-direction: row;
  justify-content: center; 
  align-items: center;
  padding: 5rpx  35rpx;
  border-radius: 3px 0 0 3px;
}
.container .image-wrapper text{
  text-align: center;
  line-height: 29rpx;
  font-size: 29rpx;
  position: relative;
  top: -10rpx;
  left: 10rpx;
}
.container image{
  width: 28rpx;
  height: 28rpx;
}
.container .text2{
  font-size: 29rpx;
  line-height: 29rpx;
  color: rgb(122, 113, 114);
  padding: 12rpx 20rpx ;
}


.ripple {

background-color: rgba(218, 29, 29, 0.8);

border-radius: 100%;

height:6px;

width:6px;

margin-top: -90px;

position: absolute;

-webkit-transform: scale(0);

}

@-webkit-keyframes ripple {

100% {

-webkit-transform: scale(18);

transform: scale(18);

background-color:transparent;

}

}